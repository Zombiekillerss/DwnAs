<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200">

    <WebView
        android:id="@+id/wv"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bSaveLink"
        android:layout_width="113dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="#8E1CA9"
        android:text="сохранить"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLink" />

    <EditText
        android:id="@+id/etLink"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Ссылка"
        android:inputType="text"
        android:text="https://rutube.ru/plst/570974"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.838" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcLinks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toTopOf="@+id/etLink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wv" />

    <Button
        android:id="@+id/bDelLink"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:background="#8E1CA9"
        android:text="Очистить"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/bSaveLink"
        app:layout_constraintStart_toEndOf="@+id/bSaveLink"
        app:layout_constraintTop_toTopOf="@+id/bSaveLink" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/etLink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etLink"
        app:layout_constraintTop_toTopOf="@+id/etLink" />
</androidx.constraintlayout.widget.ConstraintLayout>